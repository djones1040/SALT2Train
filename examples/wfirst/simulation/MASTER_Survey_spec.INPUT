BATCH_INFO: sbatch $SBATCH_TEMPLATES/SBATCH_Midway2.TEMPLATE 100
PATH_SNDATA_SIM:  $SCRATCH_SIMDIR
# specify the three survey tiers: SHALLOW,MEDIUM,DEEP

# SHALLOW Survey Data
GENVERSION: Shallow_Spec_DMS 
GENOPT: GENFILTERS RZYJ SOLID_ANGLE(SHALLOW) 0.00753257955648573 

# MEDIUM Survey Data
GENVERSION: Medium_Spec_DMS 
GENOPT: GENFILTERS ZYJH SOLID_ANGLE(MEDIUM) 0.003423899798402605 

# DEEP Survey Data
GENVERSION: Deep_Spec_DMS 
GENOPT: GENFILTERS YJHF SOLID_ANGLE(DEEP) 0.0017975473941613674 

ENDLIST_GENVERSION:

RESET_CIDOFF:  2  # uniqe random CID among all versions
# specify sim-input files for snlc_sim.exe
SIMGEN_INFILE_Ia: simulation/SIMGEN_WFIRST_SALT2_Specz.INPUT
NGEN_UNIT:  0.01  SURVEY   # each job is 0.1 of a WFIRST survey

# Define required global items to ensure uniformity among all jobs
H0: 70
ZRANGE:      0.03 2.5
GENPREFIX:   SIMULATEED_SPEC_SURVEY_DMS
FORMAT_MASK: 48          # 2=TERSE    16=RanCID  32=FITS-FORMAT
RANSEED_REPEAT: 2 123459
