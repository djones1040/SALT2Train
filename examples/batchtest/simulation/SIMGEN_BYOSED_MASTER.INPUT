BATCH_INFO:      sbatch  $SBATCH_TEMPLATES/SBATCH_Midway2_short.TEMPLATE 5

# nominal generation
GENVERSION: MD_BYOSEDTEST
GENOPT: GENPERFECT 1

ENDLIST_GENVERSION:

# specify sim-input files for snlc_sim.exe
SIMGEN_INFILE_Ia: simulation/SIMGEN_BYOSEDTEST.INPUT

# define required global items to ensure uniformity among all jobs
GENOPT_GLOBAL: GENRANGE_REDSHIFT 0.01 0.1
GENPREFIX:       BYOSEDTEST                        # prefix of all data filenames
FORMAT_MASK: 48	   # 2=TERSE        16=RanCID  32=FITS-FORMAT
PATH_SNDATA_SIM: $SCRATCH_SIMDIR

RANSEED_REPEAT: 5 123459
